<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_recent_height"
    android:layoutDirection="rtl">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_8"
        android:layout_marginLeft="@dimen/margin_24"
        android:layout_marginRight="@dimen/margin_24"
        android:layout_marginTop="@dimen/margin_8"
        app:cardCornerRadius="@dimen/corner_radius"
        app:cardElevation="@dimen/elevation">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.constraint.Guideline
                android:id="@+id/list_item_recent_gl_y2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.2" />

            <android.support.constraint.Guideline
                android:id="@+id/list_item_recent_gl_y6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.6" />

            <android.support.constraint.Guideline
                android:id="@+id/list_item_recent_gl_y8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.8" />

            <android.support.constraint.Guideline
                android:id="@+id/list_item_recent_gl_x05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />

            <android.support.constraint.Guideline
                android:id="@+id/list_item_recent_gl_x95"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />

            <ImageView
                android:id="@+id/list_item_recent_iv_is_replied"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/colorPrimaryDark"
                app:layout_constraintBottom_toBottomOf="@id/list_item_recent_gl_y6"
                app:layout_constraintRight_toRightOf="@id/list_item_recent_gl_x05"
                app:layout_constraintTop_toTopOf="@id/list_item_recent_gl_y2" />

            <TextView
                android:id="@+id/list_item_recent_tv_product_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_16"
                android:ellipsize="end"
                android:gravity="right|center"
                android:lines="1"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_18"
                app:layout_constraintLeft_toLeftOf="@id/list_item_recent_gl_x95"
                app:layout_constraintRight_toLeftOf="@id/list_item_recent_iv_is_replied"
                app:layout_constraintTop_toTopOf="@id/list_item_recent_gl_y2" />

            <TextView
                android:id="@+id/list_item_recent_tv_product_category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_16"
                android:ellipsize="end"
                android:gravity="right|center"
                android:lines="1"
                android:textSize="@dimen/text_size_15"
                app:layout_constraintBottom_toBottomOf="@id/list_item_recent_gl_y6"
                app:layout_constraintLeft_toLeftOf="@id/list_item_recent_gl_x95"
                app:layout_constraintRight_toLeftOf="@id/list_item_recent_iv_is_replied" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/product_detail"
                app:layout_constraintBottom_toBottomOf="@id/list_item_recent_gl_y8"
                app:layout_constraintRight_toRightOf="@id/list_item_recent_gl_x05"
                app:layout_constraintTop_toTopOf="@id/list_item_recent_gl_y8" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_details_black_24"
                android:tint="@color/colorPrimaryDark"
                app:layout_constraintBottom_toBottomOf="@id/list_item_recent_gl_y8"
                app:layout_constraintLeft_toLeftOf="@id/list_item_recent_gl_x95"
                app:layout_constraintTop_toTopOf="@id/list_item_recent_gl_y8" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>