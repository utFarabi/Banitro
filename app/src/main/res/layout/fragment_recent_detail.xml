                android:textSize="@dimen/text_size_15"
                app:layout_constraintBottom_toBottomOf="@id/fragment_recent_detail_gl_y360"
                app:layout_constraintLeft_toLeftOf="@id/fragment_recent_detail_gl_x95"
                app:layout_constraintRight_toRightOf="@id/fragment_recent_detail_gl_x25"
                app:layout_constraintTop_toBottomOf="@id/fragment_recent_detail_tv_help2" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/line"
                android:background="@android:color/darker_gray"
                app:layout_constraintBottom_toBottomOf="@id/fragment_recent_detail_gl_y360"
                app:layout_constraintLeft_toLeftOf="@id/fragment_recent_detail_gl_x95"
                app:layout_constraintRight_toRightOf="@id/fragment_recent_detail_gl_x25"
                app:layout_constraintTop_toTopOf="@id/fragment_recent_detail_gl_y360" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/outline_directions_car_white_36"
                android:tint="@color/colorPrimaryDark"
                app:layout_constraintBottom_toBottomOf="@id/fragment_recent_detail_gl_y440"
                app:layout_constraintLeft_toLeftOf="@id/fragment_recent_detail_gl_x2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/fragment_recent_detail_gl_y360" />

            <TextView
                android:id="@+id/fragment_recent_detail_tv_help3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right|center"
                android:text="@string/product_model"
                android:textSize="@dimen/text_size_12"
                app:layout_constraintBottom_toTopOf="@id/fragment_recent_detail_tv_model"
                app:layout_constraintLeft_toLeftOf="@id/fragment_recent_detail_gl_x95"
                app:layout_constraintRight_toRightOf="@id/fragment_recent_detail_gl_x25"
                app:layout_constraintTop_toTopOf="@id/fragment_recent_detail_gl_y360" />

            <TextView
                android:id="@+id/fragment_recent_detail_tv_model"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="right|center"
                android:lines="1"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_15"
                app:layout_constraintBottom_toBottomOf="@id/fragment_recent_detail_gl_y440"
                app:layout_constraintLeft_toLeftOf="@id/fragment_recent_detail_gl_x95"
                app:layout_constraintRight_toRightOf="@id/fragment_recent_detail_gl_x25"
                app:layout_constraintTop_toBottomOf="@id/fragment_recent_detail_tv_help3" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/line"
                android:background="@android:color/darker_gray"
                app:layout_constraintBottom_toBottomOf="@id/fragment_recent_detail_gl_y440"
                app:layout_constraintLeft_toLeftOf="@id/fragment_recent_detail_gl_x95"
                app:layout_constraintRight_toRightOf="@id/fragment_recent_detail_gl_x25"
                app:layout_constraintTop_toTopOf="@id/fragment_recent_detail_gl_y440" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/outline_date_range_white_36"
                android:tint="@color/colorPrimaryDark"
                app:layout_constraintBottom_toBottomOf="@id/fragment_recent_detail_gl_y520"
                app:layout_constraintLeft_toLeftOf="@id/fragment_recent_detail_gl_x2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/fragment_recent_detail_gl_y440" />

            <TextView
                android:id="@+id/fragment_recent_detail_tv_help4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right|center"
                android:text="@string/product_year"
                android:textSize="@dimen/text_size_12"
                app:layout_constraintBottom_toTopOf="@id/fragment_recent_detail_tv_year"
                app:layout_constraintLeft_toLeftOf="@id/fragment_recent_detail_gl_x95"
                app:layout_constraintRight_toRightOf="@id/fragment_recent_detail_gl_x25"
                app:layout_constraintTop_toTopOf="@id/fragment_recent_detail_gl_y440" />

            <TextView
                android:id="@+id/fragment_recent_detail_tv_year"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="right|center"
                android:lines="1"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_15"
                app:layout_constraintBottom_toBottomOf="@id/fragment_recent_detail_gl_y520"
                app:layout_constraintLeft_toLeftOf="@id/fragment_recent_detail_gl_x95"
                app:layout_constraintRight_toRightOf="@id/fragment_recent_detail_gl_x25"
                app:layout_constraintTop_toBottomOf="@id/fragment_recent_detail_tv_help4" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/line"
                android:background="@android:color/darker_gray"
                app:layout_constraintBottom_toBottomOf="@id/fragment_recent_detail_gl_y520"
                app:layout_constraintLeft_toLeftOf="@id/fragment_recent_detail_gl_x95"
                app:layout_constraintRight_toRightOf="@id/fragment_recent_detail_gl_x25"
                app:layout_constraintTop_toTopOf="@id/fragment_recent_detail_gl_y520" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/outline_add_to_photos_black_36"
                android:tint="@color/colorPrimaryDark"
                app:layout_constraintBottom_toBottomOf="@id/fragment_recent_detail_gl_y600"
                app:layout_constraintLeft_toLeftOf="@id/fragment_recent_detail_gl_x2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/fragment_recent_detail_gl_y520" />

            <TextView
                android:id="@+id/fragment_recent_detail_tv_help5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right|center"
                android:text="@string/product_number"
                android:textSize="@dimen/text_size_12"
                app:layout_constraintBottom_toTopOf="@id/fragment_recent_detail_tv_number"
                app:layout_constraintLeft_toLeftOf="@id/fragment_recent_detail_gl_x95"
                app:layout_constraintRight_toRightOf="@id/fragment_recent_detail_gl_x25"
                app:layout_constraintTop_toTopOf="@id/fragment_recent_detail_gl_y520" />

            <TextView
                android:id="@+id/fragment_recent_detail_tv_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="right|center"
                android:lines="1"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_15"
                app:layout_constraintBottom_toBottomOf="@id/fragment_recent_detail_gl_y600"
                app:layout_constraintLeft_toLeftOf="@id/fragment_recent_detail_gl_x95"
                app:layout_constraintRight_toRightOf="@id/fragment_recent_detail_gl_x25"
                app:layout_constraintTop_toBottomOf="@id/fragment_recent_detail_tv_help5" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/line"
                android:background="@android:color/darker_gray"
                app:layout_constraintBottom_toBottomOf="@id/fragment_recent_detail_gl_y600"
                app:layout_constraintLeft_toLeftOf="@id/fragment_recent_detail_gl_x95"
                app:layout_constraintRight_toRightOf="@id/fragment_recent_detail_gl_x25"
                app:layout_constraintTop_toTopOf="@id/fragment_recent_detail_gl_y600" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/outline_assignment_white_36"
                android:tint="@color/colorPrimaryDark"
                app:layout_constraintBottom_toBottomOf="@id/fragment_recent_detail_gl_y720"
                app:layout_constraintLeft_toLeftOf="@id/fragment_recent_detail_gl_x2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/fragment_recent_detail_gl_y600" />

            <TextView
                android:id="@+id/fragment_recent_detail_tv_help6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right|center"
                android:text="@string/product_description"
                android:textSize="@dimen/text_size_12"
                app:layout_constraintBottom_toTopOf="@id/fragment_recent_detail_tv_description"
                app:layout_constraintLeft_toLeftOf="@id/fragment_recent_detail_gl_x95"
                app:layout_constraintRight_toRightOf="@id/fragment_recent_detail_gl_x25"
                app:layout_constraintTop_toTopOf="@id/fragment_recent_detail_gl_y600" />

            <TextView
                android:id="@+id/fragment_recent_detail_tv_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="right|center"
                android:maxLines="2"
                android:minLines="1"
                android:textColor="@android:color/black"
                android:textDirection="ltr"
                android:textSize="@dimen/text_size_15"
                app:layout_constraintBottom_toBottomOf="@id/fragment_recent_detail_gl_y720"
                app:layout_constraintLeft_toLeftOf="@id/fragment_recent_detail_gl_x95"
                app:layout_constraintRight_toRightOf="@id/fragment_recent_detail_gl_x25"
                app:layout_constraintTop_toBottomOf="@id/fragment_recent_detail_tv_help6" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/line"
                android:background="@android:color/darker_gray"
                app:layout_constraintBottom_toBottomOf="@id/fragment_recent_detail_gl_y720"
                app:layout_constraintLeft_toLeftOf="@id/fragment_recent_detail_gl_x95"
                app:layout_constraintRight_toRightOf="@id/fragment_recent_detail_gl_x25"
                app:layout_constraintTop_toTopOf="@id/fragment_recent_detail_gl_y720" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/outline_more_vert_white_36"
                android:tint="@color/colorPrimaryDark"
                app:layout_constraintBottom_toBottomOf="@id/fragment_recent_detail_gl_y800"
                app:layout_constraintLeft_toLeftOf="@id/fragment_recent_detail_gl_x2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/fragment_recent_detail_gl_y720" />

            <TextView
                android:id="@+id/fragment_recent_detail_tv_help7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right|center"
                android:text="@string/product_chassis"
                android:textSize="@dimen/text_size_12"
                app:layout_constraintBottom_toTopOf="@id/fragment_recent_detail_tv_chassis"
                app:layout_constraintLeft_toLeftOf="@id/fragment_recent_detail_gl_x95"
                app:layout_constraintRight_toRightOf="@id/fragment_recent_detail_gl_x25"
                app:layout_constraintTop_toTopOf="@id/fragment_recent_detail_gl_y720" />

            <TextView
                android:id="@+id/fragment_recent_detail_tv_chassis"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="right|center"
                android:maxLines="2"
                android:minLines="1"
                android:textColor="@android:color/black"
                android:textDirection="ltr"
                android:textSize="@dimen/text_size_15"
                app:layout_constraintBottom_toBottomOf="@id/fragment_recent_detail_gl_y800"
                app:layout_constraintLeft_toLeftOf="@id/fragment_recent_detail_gl_x95"
                app:layout_constraintRight_toRightOf="@id/fragment_recent_detail_gl_x25"
                app:layout_constraintTop_toBottomOf="@id/fragment_recent_detail_tv_help7" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/line"
                android:background="@android:color/darker_gray"
                app:layout_constraintBottom_toBottomOf="@id/fragment_recent_detail_gl_y800"
                app:layout_constraintLeft_toLeftOf="@id/fragment_recent_detail_gl_x95"
                app:layout_constraintRight_toRightOf="@id/fragment_recent_detail_gl_x25"
                app:layout_constraintTop_toTopOf="@id/fragment_recent_detail_gl_y800" />

            <Button
                android:id="@+id/fragment_recent_detail_btn_submit_price"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/colorAccent"
                android:text="@string/submit_price"
                android:textColor="@android:color/black"
                android:textDirection="ltr"
                android:textSize="@dimen/text_size_21"
                app:layout_constraintBottom_toBottomOf="@id/fragment_recent_detail_gl_y940"
                app:layout_constraintTop_toTopOf="@id/fragment_recent_detail_gl_y880" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/fragment_recent_detail_pb_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>