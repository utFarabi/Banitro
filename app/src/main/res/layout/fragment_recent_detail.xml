<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:layoutDirection="rtl">

    <android.support.v7.widget.Toolbar
        android:id="@+id/fragment_recent_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:title="@string/product_detail"
        app:titleTextColor="@android:color/white" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_recent_detail_toolbar">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.constraint.Guideline
                android:id="@+id/fragment_recent_detail_gl_y200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="200dp" />

            <android.support.constraint.Guideline
                android:id="@+id/fragment_recent_detail_gl_y280"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="280dp" />

            <android.support.constraint.Guideline
                android:id="@+id/fragment_recent_detail_gl_y360"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="360dp" />

            <android.support.constraint.Guideline
                android:id="@+id/fragment_recent_detail_gl_y440"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="440dp" />

            <android.support.constraint.Guideline
                android:id="@+id/fragment_recent_detail_gl_y520"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="520dp" />

            <android.support.constraint.Guideline
                android:id="@+id/fragment_recent_detail_gl_y600"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="600dp" />

            <android.support.constraint.Guideline
                android:id="@+id/fragment_recent_detail_gl_y720"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="720dp" />

            <android.support.constraint.Guideline
                android:id="@+id/fragment_recent_detail_gl_y800"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="800dp" />

            <android.support.constraint.Guideline
                android:id="@+id/fragment_recent_detail_gl_y880"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="880dp" />

            <android.support.constraint.Guideline
                android:id="@+id/fragment_recent_detail_gl_y940"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="940dp" />

            <android.support.constraint.Guideline
                android:id="@+id/fragment_recent_detail_gl_x2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.2" />

            <android.support.constraint.Guideline
                android:id="@+id/fragment_recent_detail_gl_x25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.25" />

            <android.support.constraint.Guideline
                android:id="@+id/fragment_recent_detail_gl_x95"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />

            <ImageView
                android:id="@+id/fragment_recent_detail_iv_picture"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/banitro_logo"
                app:layout_constraintBottom_toBottomOf="@id/fragment_recent_detail_gl_y200"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/outline_local_offer_black_36"
                android:tint="@color/colorPrimaryDark"
                app:layout_constraintBottom_toBottomOf="@id/fragment_recent_detail_gl_y280"
                app:layout_constraintLeft_toLeftOf="@id/fragment_recent_detail_gl_x2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/fragment_recent_detail_gl_y200" />

            <TextView
                android:id="@+id/fragment_recent_detail_tv_help1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right|center"
                android:text="@string/product_name"
                android:textSize="@dimen/text_size_12"
                app:layout_constraintBottom_toTopOf="@id/fragment_recent_detail_tv_name"
                app:layout_constraintLeft_toLeftOf="@id/fragment_recent_detail_gl_x95"
                app:layout_constraintRight_toRightOf="@id/fragment_recent_detail_gl_x25"
                app:layout_constraintTop_toTopOf="@id/fragment_recent_detail_gl_y200" />

            <TextView
                android:id="@+id/fragment_recent_detail_tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="right|center"
                android:lines="1"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_15"
                app:layout_constraintBottom_toBottomOf="@id/fragment_recent_detail_gl_y280"
                app:layout_constraintLeft_toLeftOf="@id/fragment_recent_detail_gl_x95"
                app:layout_constraintRight_toRightOf="@id/fragment_recent_detail_gl_x25"
                app:layout_constraintTop_toBottomOf="@id/fragment_recent_detail_tv_help1" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/line"
                android:background="@android:color/darker_gray"
                app:layout_constraintBottom_toBottomOf="@id/fragment_recent_detail_gl_y280"
                app:layout_constraintLeft_toLeftOf="@id/fragment_recent_detail_gl_x95"
                app:layout_constraintRight_toRightOf="@id/fragment_recent_detail_gl_x25"
                app:layout_constraintTop_toTopOf="@id/fragment_recent_detail_gl_y280" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/outline_menu_black_36"
                android:tint="@color/colorPrimaryDark"
                app:layout_constraintBottom_toBottomOf="@id/fragment_recent_detail_gl_y360"
                app:layout_constraintLeft_toLeftOf="@id/fragment_recent_detail_gl_x2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/fragment_recent_detail_gl_y280" />

            <TextView
                android:id="@+id/fragment_recent_detail_tv_help2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right|center"
                android:text="@string/category"
                android:textSize="@dimen/text_size_12"
