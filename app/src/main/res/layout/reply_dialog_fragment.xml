<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl">

    <android.support.constraint.ConstraintLayout
        android:layout_width="@dimen/dialog_fragment_width"
        android:layout_height="@dimen/dialog_fragment_height">

        <android.support.constraint.Guideline
            android:id="@+id/reply_dialog_fragment_gl_y2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2" />

        <android.support.constraint.Guideline
            android:id="@+id/reply_dialog_fragment_gl_y25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.25" />

        <android.support.constraint.Guideline
            android:id="@+id/reply_dialog_fragment_gl_y45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.45" />

        <android.support.constraint.Guideline
            android:id="@+id/reply_dialog_fragment_gl_y55"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.55" />

        <android.support.constraint.Guideline
            android:id="@+id/reply_dialog_fragment_gl_y75"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.75" />

        <android.support.constraint.Guideline
            android:id="@+id/reply_dialog_fragment_gl_y8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.8" />

        <android.support.constraint.Guideline
            android:id="@+id/reply_dialog_fragment_gl_x05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <android.support.constraint.Guideline
            android:id="@+id/reply_dialog_fragment_gl_x95"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send_price"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_18"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/reply_dialog_fragment_gl_y2"
            app:layout_constraintRight_toRightOf="@id/reply_dialog_fragment_gl_x05"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/edit_text_shape"
            android:hint="توضیح مختصر"
            android:inputType="text"
            android:lines="1"
            android:maxLength="20"
            android:padding="@dimen/padding_8"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_18"
            app:layout_constraintBottom_toBottomOf="@id/reply_dialog_fragment_gl_y45"
            app:layout_constraintLeft_toLeftOf="@id/reply_dialog_fragment_gl_x95"
            app:layout_constraintRight_toRightOf="@id/reply_dialog_fragment_gl_x05"
            app:layout_constraintTop_toTopOf="@id/reply_dialog_fragment_gl_y25" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/edit_text_shape"
            android:hint="@string/price_toman"
            android:inputType="number"
            android:lines="1"
            android:maxLength="12"
            android:padding="@dimen/padding_8"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_18"
            app:layout_constraintBottom_toBottomOf="@id/reply_dialog_fragment_gl_y75"
            app:layout_constraintLeft_toLeftOf="@id/reply_dialog_fragment_gl_x95"
            app:layout_constraintRight_toRightOf="@id/reply_dialog_fragment_gl_x05"
            app:layout_constraintTop_toTopOf="@id/reply_dialog_fragment_gl_y55" />

        <Button
            android:id="@+id/reply_dialog_fragment_btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="right|center"
            android:text="@string/send"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_18"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="@id/reply_dialog_fragment_gl_x05"
            app:layout_constraintTop_toTopOf="@id/reply_dialog_fragment_gl_y8" />

        <Button
            android:id="@+id/reply_dialog_fragment_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="right|center"
            android:text="@string/cancel"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_18"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/reply_dialog_fragment_btn_send"
            app:layout_constraintTop_toTopOf="@id/reply_dialog_fragment_gl_y8" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>