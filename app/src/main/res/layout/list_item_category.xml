<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_category_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl">

    <android.support.constraint.Guideline
        android:id="@+id/list_item_incoming_gl_x1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <android.support.constraint.Guideline
        android:id="@+id/list_item_incoming_gl_x3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />

    <android.support.constraint.Guideline
        android:id="@+id/list_item_incoming_gl_x9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <CheckBox
        android:id="@+id/list_item_category_cb_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@id/list_item_incoming_gl_x1"/>

    <TextView
        android:id="@+id/list_item_category_tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:lines="1"
        android:textSize="@dimen/text_size_15"
        android:textColor="@android:color/black"
        android:ellipsize="end"
        app:layout_constraintLeft_toLeftOf="@id/list_item_incoming_gl_x9"
        app:layout_constraintRight_toRightOf="@id/list_item_incoming_gl_x3"/>

</android.support.constraint.ConstraintLayout>